    "version": "0.2.0",
    "configurations": [
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Serve with Drafts+Future",
            "script": "bash",
            "args": ["-c \"jekyll serve --future --drafts\""],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "PowerShell",
            "request": "launch",
            "name": "Build for PROD",
            "script": "bash",
            "args": ["-c \"JEKYLL_ENV=production jekyll build\""],
            "cwd": "${workspaceRoot}"
        }
    ]
}